{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "noEmitOnError": true,
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "allowJs": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
  },
  "exclude": ["**/__tests__/*"],
  "include": ["src"]
}
